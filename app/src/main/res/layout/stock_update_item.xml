<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/gray">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/now_stock_item_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            sl:scale_base_height="100"
            sl:scale_base_width="600">

            <TextView
                android:id="@+id/now_stock_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="하객 브이넥 랩원피스"
                android:textColor="@color/black"
                sl:scale_height="80"
                sl:scale_left="10"
                sl:scale_textsize="30"
                sl:scale_top="10"
                sl:scale_width="280" />

            <TextView
                android:id="@+id/now_stock_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Black,"
                android:textColor="@color/black"
                android:textSize="15sp"
                sl:scale_height="80"
                sl:scale_left="300"
                sl:scale_textsize="25"
                sl:scale_top="10"
                sl:scale_width="80" />

            <TextView
                android:id="@+id/now_stock_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=" Free"
                android:textColor="@color/black"
                android:textSize="15sp"
                sl:scale_height="80"
                sl:scale_left="380"
                sl:scale_textsize="25"
                sl:scale_top="10"
                sl:scale_width="60" />

            <EditText
                android:id="@+id/now_stock_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:inputType="number"
                sl:scale_height="70"
                sl:scale_left="450"
                sl:scale_textsize="30"
                sl:scale_top="15"
                sl:scale_width="60" />

            <Button
                android:id="@+id/now_stock_add_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="입력"
                android:textColor="@color/black"
                sl:scale_height="60"
                sl:scale_left="520"
                sl:scale_textsize="17"
                sl:scale_top="25"
                sl:scale_width="70"
                />
            <!--
            <TextView
                android:id="@+id/order_date_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/black"
                sl:scale_height="50"
                sl:scale_left="490"
                sl:scale_textsize="30"
                sl:scale_top="25"
                sl:scale_width="50" />
-->

        </com.ssomai.android.scalablelayout.ScalableLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>