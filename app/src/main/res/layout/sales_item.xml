<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/sales_date"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="YY년MM월DD일"
        android:textSize="15sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/sales_count"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="판매수량: 10개"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_alignBaseline="@+id/sales_date"
        android:layout_alignBottom="@+id/sales_date"
        android:layout_toRightOf="@+id/sales_date"
        android:layout_toEndOf="@+id/sales_date" />

    <TextView
        android:id="@+id/sales_total_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="매출액: 420000원"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_alignTop="@+id/sales_count"
        android:layout_toRightOf="@+id/sales_count"
        android:layout_toEndOf="@+id/sales_count" />

</RelativeLayout>